<% layout('layout') -%>
     <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <h1>
            Users
            <small>User Regist and delete</small>
          </h1>
          <ol class="breadcrumb">
            <li><a href="/"><i class="fa fa-laptop"></i> Home</a></li>
            <li><a href="#">Management</a></li>
            <li class="active">Users</li>
          </ol>
        </section>

        <!-- Main content -->
        <section class="content">
          <div class="row">
            <div class="col-xs-12">
              <div class="box">
                <div class="box-header">
                  <h3 class="box-title">User List</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                  <table id="example1" class="table table-bordered table-striped">
		  <a href = "/management/users/insert">
                    <button type="submit" class="btn btn-primary">UserAdd</button>
                  </a>
                    <thead>
                      <tr>
                        <th>No.</th>
                        <th>UserID</th>
                        <th>UserName</th>
                        <th>Status</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% data.forEach( function(item, index) { %>
                      <tr>
                        <td><%= index+1 %></td>
                        <td><%= item.ID %></td>
                        <td><%= item.NAME %></td>
			<% if( item.STATUS == 0) { %>
				<td style="text-align: center"><i class="fa fa-circle text-success"></i></td>
			<% } else { %>
				<td style="text-align: center"><i class="fa fa-circle text-danger"></i></td>
			<% } %>
                        <td><a href = "/management/users/edit/<%= item.ID %>">EDIT</a></td>
			<% if( item.STATUS == 0) { %>
                        	<td><a href = "/management/users/delete/<%= item.ID %>">DELETE</a></td>
			<% } else { %>
                        	<td><a href = "/management/users/accept/<%= item.ID %>">ACCEPT</a></td>
			<% } %>
                        <td><a href = "/management/users/course/<%= item.ID %>">COURSE</a></td>
                      </tr>
                      <% }); %>
                    </tbody>
                    <tfoot>
                      <tr>
                        <th>No.</th>
                        <th>UserID</th>
                        <th>UserName</th>
                        <th>Status</th>
                      </tr>
                    </tfoot>
                  </table>
                </div><!-- /.box-body -->
              </div><!-- /.box -->
            </div><!-- /.col -->
          </div><!-- /.row -->
        </section><!-- /.content -->
	</div><!-- /.content-wrapper -->
