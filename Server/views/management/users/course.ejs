<% layout('layout') -%>
      <!-- Content Wrapper. Contains page content -->
      <div class = "content-wrapper">
        <!-- Content Header (page header) -->
        <section class="content-header">
          <h1>
	    Course
	    <small>Timetable</small>
	  </h1>
	  <ol class="breadcrumb">
	    <li><a href"/"><i class="fa fa-laptop"></i> Home</a></li>
	    <li class="active">Course</li>
	  </ol>
	</section>

        <!-- Main content -->
          <section class="content">
            <div class="row">
              <div class="col-xs-12">
	        <div class="box">
		  <div class="box-header">
                    <h3 class="box-title">Timetable</h3>
                  </div><!-- /.box-header -->
		  <div class="box-body">
                    <table class="table table-bordered table-striped">
		      <thead>
                        <tr>
                          <th>CourseCODE</th>
                          <th>CourseName</th>
                          <th>DepartmentName</th>
                          <th>Location</th>
			  <th>Day</th>
                          <th>StartTime</th>
			  <th>EndTime</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% object.forEach(function (item, index) { %>
                        <tr>
                          <td><a href="/management/users/course/<%= id %>/delete/<%= item.COU_CODE %>"><%= item.COU_CODE %></a></td>
                          <td><%= item.COU_NAME %></td>
			  <td><%= item.DEP_NAME %></td>
			  <td><%= item.LOC_NAME %></td>
			  <td><%= item.COU_DAY %></td>
			  <td><%= item.COU_ST %></td>
			  <td><%= item.COU_EN %></td>
		        </tr>
			<% })%>
                      </tbody>
                      <tfoot>
                        <tr>
                          <th>CourseCODE</th>
                          <th>CourseName</th>
                          <th>DepartmentName</th>
                          <th>Location</th>
			  <th>Day</th>
                          <th>StartTime</th>
			  <th>EndTime</th>
                        </tr>
                      </tfoot>
		    </table>
		    <li class="dropdown messages-menu">
                      <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <button type="add" class="btn btn-primary">추가</button>
                      </a>
		      <ul class="dropdown-menu">
                        <li style="width:500px;">
                          <!-- inner menu: contains the actual data -->
			  <ul class="menu" >
			    <!-- general form elements -->
			    <div class="box">
			      <div class="box-header with-border">
				<h3 class="box-title">Add Schedule</h3>
			      </div><!-- /.box-header -->
			      <!-- form start -->
			      <form role="form" action="/management/users/course/<%= id %>/add" method="POST">
                      	        <select name="CODE" class="form-control select2" style="width: 100%;">
                                  <option selected="selected">Select</option>
                                    <% object1.forEach(function (item, index) { %>
                                    <option><%= item.CODE %>/<%= item.NAME %></option>
                                    <% }); %>
                      	        </select>
				<div class="box-footer">
				  <input type="submit" class="btn btn-primary" value="Add">
				  <button type="reset" class="btn btn-danger">Reset</button>
				</div>
			      </form>
			    </div><!-- /.box -->
                    	  </ul>
                  	</li>
		      </ul>
		    </li>
		  </div>
                </div><!-- /.col -->
	      </div>
            </div><!-- /.row -->
          </section><!-- /.content -->
        </div><!-- /.content-wrapper -->
