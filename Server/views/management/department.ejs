<% layout('layout') -%>
      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <h1>
            BeaCon
            <small>Condition</small>
          </h1>
          <ol class="breadcrumb">
            <li><a href="/"><i class="fa fa-laptop"></i> Home</a></li>
            <li class="active">Department</li>
          </ol>
        </section>
        <!-- Main content -->
        <section class="content">
          <!-- Small boxes (Stat box) -->
          <div class="col-md-6"><!-- /.Left -->
            <div class="box">
              <div class="box-header">
                <p><h3 class="box-title">Department</h3></p>
              </div><!-- /.box-header -->
              <div class="box-body no-padding">
                <table class="table table-condensed">
                  <tr>
                    <th style="width: 30px; text-align: center">#</th>
                    <th style="width: 100px">Code</th>
                    <th style="width: 100px">Name</th>
                    <th style="width: 100px">Remove</th>
                  </tr>
                  <% object.forEach(function (item, index) { %>
                  <tr>
                    <td style=" text-align: center"><%= index+1 %></td>
                    <td><%= item.CODE %></td>
                    <td><%= item.NAME %></td>
                    <td><a href = "/management/department/delete/<%= item.CODE %>"> DEL </a></td>
                  </tr>
                  <% }); %>
                </table>
              </div><!-- /.box-body -->
            </div><!-- /.box -->
          </div><!-- /.row -->
          <div class="col-md-6"><!-- /.Right -->
            <div class="box">
              <div class="box-header">
                <p><h3 class="box-title">Add Department</h3></p>
              </div><!-- /.box-header -->
                <!-- form start -->
                <form id="frmBeacon" action="/management/department/insert" method="POST" >
                  <div class="box-body">
                    <div class="form-group">
                      <label for="exampleInputPassword1">Name</label>
                      <input name="NAME" maxlength=17 type="text" class="form-control" placeholder="Department Name">
                    </div>
                    <div class="form-group">
                      <label for="exampleinputPassword1">Code</label>
                      <input name="CODE" maxlength=3 type="text" class="form-control" placeholder="Department Code Ex) 350">
                    </div><!-- /.form-group -->
                  </div><!-- /.box-body -->
                  <div class="box-footer">
                    <input type="submit" class="btn btn-primary"></input>
                    <button type="reset" class="btn btn-danger">cancel</button>
                  </div>
                </form>
              </div><!-- /.box-body -->
            </div><!-- /.box -->
          </div><!-- /.row -->
        </div>
      </div>
    </section><!-- /.content -->
  </div><!-- /.content-wrapper -->
